# This stage is used when running from VS in fast mode (Default for Debug configuration)

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER app
WORKDIR /app

# This stage is used to build the service project
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["TechChallengeFIAP.Consumer/TechChallengeFIAP.Consumer.csproj", "TechChallengeFIAP.Consumer/"]
COPY ["TechChallengeFIAP.Infrastructure/TechChallengeFIAP.Infrastructure.csproj", "TechChallengeFIAP.Infrastructure/"]
COPY ["TechChallengeFIAP.Core/TechChallengeFIAP.Core.csproj", "TechChallengeFIAP.Core/"]
RUN dotnet restore "./TechChallengeFIAP.Consumer/TechChallengeFIAP.Consumer.csproj"
COPY . .
WORKDIR "/src/TechChallengeFIAP.Consumer"
RUN dotnet build "./TechChallengeFIAP.Consumer.csproj" -c $BUILD_CONFIGURATION -o /app/build

# This stage is used to publish the service project to be copied to the final stage
FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./TechChallengeFIAP.Consumer.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

# This stage is used in production or when running from VS in regular mode (Default when not using the Debug configuration)
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "TechChallengeFIAP.Consumer.dll"]